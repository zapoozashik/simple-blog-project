{
  "compilerOptions": {
    /* ===============================
       Environment & Output
    =============================== */
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",

    /* ===============================
       Node.js Support
    =============================== */
    "types": ["node"],

    /* ===============================
       Interop & Modules
    =============================== */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* ===============================
       Source Maps & Declarations
    =============================== */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ===============================
       Strict Type Safety
    =============================== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ===============================
       Performance & Stability
    =============================== */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  /* ===============================
     Files TypeScript Should Compile
  =============================== */
  "include": [
    "**/*.ts"
  ],

  /* ===============================
     Files TypeScript Should Ignore
  =============================== */
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}
